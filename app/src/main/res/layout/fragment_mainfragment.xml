<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.mainfragment">

 <ScrollView
     android:layout_above="@id/adView"
     android:id="@+id/scroll"
     android:layout_width="match_parent"
     android:layout_height="match_parent">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">
         <RelativeLayout
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:layout_height="wrap_content">
             <TextView
                 android:layout_marginTop="@dimen/_7sdp"
                 android:layout_marginLeft="@dimen/_18sdp"
                 android:fontFamily="@font/regular"
                 android:textSize="@dimen/_12sdp"
                 android:id="@+id/user"
                 android:textColor="@color/blackish"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Hello User" />
             <TextView
                 android:layout_toRightOf="@id/user"
                 android:layout_toLeftOf="@id/frame"
                 android:layout_width = "match_parent"
                 android:layout_height = "wrap_content" />
             <RelativeLayout
                 android:layout_alignParentEnd="true"
                 android:id="@+id/frame"
                 android:layout_margin="@dimen/_3sdp"
                 android:background="@drawable/rect"
                 android:layout_width="@dimen/_90sdp"
                 android:layout_height="@dimen/_40sdp">
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:gravity="center_vertical"
                     android:orientation="horizontal">
                     <ImageView
                         android:gravity="center"
                         android:layout_marginLeft="@dimen/_10sdp"
                         android:layout_width="@dimen/_25sdp"
                         android:layout_height="@dimen/_25sdp"
                         android:src="@drawable/coin"
                         />
                     <TextView
                         android:layout_marginLeft="0dp"
                         android:paddingLeft="0dp"

                         android:id="@+id/coin"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:fontFamily="@font/regular"
                         android:text="1200"
                         android:textColor="@color/white"
                         android:textSize="@dimen/_15sdp"/>
                 </LinearLayout>


             </RelativeLayout>
         </RelativeLayout>
         <View
             android:id="@+id/spin"
             android:layout_marginTop="@dimen/_10sdp"
             android:layout_marginHorizontal="@dimen/_15sdp"
             android:layout_width="match_parent"
             android:layout_height="@dimen/_150sdp"
             android:background="@drawable/banner"/>


         <TextView
             android:textSize="@dimen/_20sdp"
             android:layout_marginTop="@dimen/_10sdp"
             android:layout_marginLeft="@dimen/_15sdp"
             android:fontFamily="@font/bold"
             android:textColor="@color/blackish"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Top Offers"/>

         <LinearLayout
             android:id="@+id/l1"
             android:layout_margin="@dimen/_15sdp"
             android:background="@drawable/offer1"
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:layout_height="@dimen/_70sdp">
             <ImageView
                 android:layout_gravity="center"
                 android:layout_width="@dimen/_50sdp"
                 android:layout_height="@dimen/_50sdp"
                 android:padding="@dimen/_5sdp"
                 android:src="@drawable/polifish"/>
             <LinearLayout
                 android:layout_weight="1"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:orientation="vertical">
                 <TextView
                     android:textSize="@dimen/_18sdp"
                     android:layout_marginTop="@dimen/_10sdp"
                     android:layout_marginLeft="@dimen/_10sdp"
                     android:fontFamily="@font/bold"
                     android:textColor="@color/blackish"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Pollfish Survey"/>
                 <TextView
                     android:textSize="@dimen/_12sdp"
                     android:layout_marginLeft="@dimen/_10sdp"
                     android:fontFamily="@font/regular"
                     android:textColor="@color/blackish"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Get coins for taking surveys"/>
             </LinearLayout>
             <ImageView
                 android:layout_marginEnd="@dimen/_7sdp"
                 android:layout_gravity="center"
                 android:layout_width="@dimen/_20sdp"
                 android:layout_height="@dimen/_20sdp"
                 android:src="@drawable/arraow"/>
         </LinearLayout>

         <LinearLayout
             android:id="@+id/l2"
             android:layout_marginHorizontal="@dimen/_15sdp"
             android:background="@drawable/offer2"
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:layout_height="@dimen/_70sdp">
             <ImageView
                 android:layout_gravity="center"
                 android:layout_width="@dimen/_50sdp"
                 android:layout_height="@dimen/_50sdp"
                 android:padding="@dimen/_5sdp"
                 android:src="@drawable/medis"/>
             <LinearLayout
                 android:layout_weight="1"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:orientation="vertical">
                 <TextView
                     android:textSize="@dimen/_18sdp"
                     android:layout_marginTop="@dimen/_10sdp"
                     android:layout_marginLeft="@dimen/_10sdp"
                     android:fontFamily="@font/bold"
                     android:textColor="@color/blackish"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="AdGate Media"/>
                 <TextView
                     android:textSize="@dimen/_12sdp"
                     android:layout_marginLeft="@dimen/_10sdp"
                     android:fontFamily="@font/regular"
                     android:textColor="@color/blackish"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Get coins for taking surveys"/>
             </LinearLayout>
             <ImageView
                 android:layout_marginEnd="@dimen/_7sdp"
                 android:layout_gravity="center"
                 android:layout_width="@dimen/_20sdp"
                 android:layout_height="@dimen/_20sdp"
                 android:src="@drawable/arraow"/>
         </LinearLayout>
         <LinearLayout
             android:id="@+id/l3"
             android:layout_margin="@dimen/_15sdp"
             android:background="@drawable/offer3"
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:layout_height="@dimen/_70sdp">
             <ImageView
                 android:layout_gravity="center"
                 android:layout_width="@dimen/_50sdp"
                 android:layout_height="@dimen/_50sdp"
                 android:padding="@dimen/_5sdp"
                 android:src="@drawable/bitlab"/>
             <LinearLayout
                 android:layout_weight="1"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:orientation="vertical">
                 <TextView
                     android:textSize="@dimen/_18sdp"
                     android:layout_marginTop="@dimen/_10sdp"
                     android:layout_marginLeft="@dimen/_10sdp"
                     android:fontFamily="@font/bold"
                     android:textColor="@color/blackish"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="BitLabs"/>
                 <TextView
                     android:textSize="@dimen/_12sdp"
                     android:layout_marginLeft="@dimen/_10sdp"
                     android:fontFamily="@font/regular"
                     android:textColor="@color/blackish"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Get coins for taking surveys"/>
             </LinearLayout>
             <ImageView
                 android:layout_marginEnd="@dimen/_7sdp"
                 android:layout_gravity="center"
                 android:layout_width="@dimen/_20sdp"
                 android:layout_height="@dimen/_20sdp"
                 android:src="@drawable/arraow"/>
         </LinearLayout>
         <TextView
             android:textSize="@dimen/_20sdp"
             android:layout_marginTop="@dimen/_10sdp"
             android:layout_marginLeft="@dimen/_15sdp"
             android:fontFamily="@font/bold"
             android:textColor="@color/blackish"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Play For Rewards"/>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="horizontal">
             <RelativeLayout
                 android:id="@+id/scratch"
                 android:layout_margin="@dimen/_10sdp"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/_130sdp"
                 android:background="@drawable/box"
                 android:layout_weight="1">

                 <ImageView
                     android:id="@+id/scratch1"
                     android:layout_width="@dimen/_60sdp"
                     android:layout_height="@dimen/_60sdp"
                     android:layout_centerInParent="true"
                     android:src="@drawable/scratch" />
                 <TextView
                     android:layout_marginTop="@dimen/_7sdp"
                     android:layout_centerInParent="true"
                     android:layout_below="@id/scratch1"
                     android:textSize="@dimen/_13sdp"
                     android:textStyle="italic"
                     android:fontFamily="@font/bold"
                     android:textColor="@color/blackish"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Scratch Card"/>

             </RelativeLayout>
             <RelativeLayout
                 android:id="@+id/math"
                 android:layout_marginVertical="@dimen/_10sdp"
                 android:layout_marginRight="@dimen/_10sdp"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/_130sdp"
                 android:background="@drawable/box"
                 android:layout_weight="1">

                 <ImageView
                     android:id="@+id/quiz"
                     android:layout_width="@dimen/_60sdp"
                     android:layout_height="@dimen/_60sdp"
                     android:layout_centerInParent="true"
                     android:gravity="center"
                     android:src="@drawable/mathquizz" />
                 <TextView
                     android:layout_marginTop="@dimen/_7sdp"
                     android:layout_below="@id/quiz"
                     android:textSize="@dimen/_13sdp"
                     android:textStyle="italic"
                     android:gravity="center"
                     android:layout_centerInParent="true"
                     android:fontFamily="@font/bold"
                     android:textColor="@color/blackish"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Math Quiz"/>
             </RelativeLayout>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="horizontal">
             <RelativeLayout
                 android:id="@+id/videozone"
                 android:layout_margin="@dimen/_10sdp"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/_130sdp"
                 android:background="@drawable/box"
                 android:layout_weight="1">

                 <ImageView
                     android:id="@+id/video"
                     android:layout_width="@dimen/_60sdp"
                     android:layout_height="@dimen/_60sdp"
                     android:layout_centerInParent="true"
                     android:src="@drawable/videozone" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_below="@id/video"
                     android:layout_centerInParent="true"
                     android:layout_marginTop="@dimen/_7sdp"
                     android:fontFamily="@font/bold"
                     android:text="Survey Monkey"
                     android:textColor="@color/blackish"
                     android:textSize="@dimen/_13sdp"
                     android:textStyle="italic" />

             </RelativeLayout>
             <RelativeLayout
                 android:id="@+id/playzone"
                 android:layout_marginVertical="@dimen/_10sdp"
                 android:layout_marginRight="@dimen/_10sdp"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/_130sdp"
                 android:background="@drawable/box"
                 android:layout_weight="1">

                 <ImageView
                     android:id="@+id/play"
                     android:layout_width="@dimen/_60sdp"
                     android:layout_height="@dimen/_60sdp"
                     android:layout_centerInParent="true"
                     android:gravity="center"
                     android:src="@drawable/playzone" />

                 <TextView
                     android:layout_marginTop="@dimen/_7sdp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_below="@id/play"
                     android:layout_centerInParent="true"
                     android:fontFamily="@font/bold"
                     android:gravity="center"
                     android:text="opinion"
                     android:textColor="@color/blackish"
                     android:textSize="@dimen/_13sdp"
                     android:textStyle="italic" />
             </RelativeLayout>
         </LinearLayout>
         <TextView
             android:textSize="@dimen/_20sdp"
             android:layout_marginTop="@dimen/_10sdp"
             android:layout_marginLeft="@dimen/_15sdp"
             android:fontFamily="@font/bold"
             android:textColor="@color/blackish"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Other"/>
         <LinearLayout
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:layout_height="@dimen/_80sdp">
             <ImageView
                 android:id="@+id/telegram"
                 android:layout_marginHorizontal="@dimen/_10sdp"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:src="@drawable/telegram"/>
             <ImageView
                 android:id="@+id/rate"
                 android:layout_marginRight="@dimen/_10sdp"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:src="@drawable/rate"/>
         </LinearLayout>

     </LinearLayout>

 </ScrollView>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>