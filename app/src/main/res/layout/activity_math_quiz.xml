<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E9FAF9"
    tools:context=".Activities.MathQuiz">

   <ScrollView
       android:layout_above="@id/adView"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <androidx.appcompat.widget.Toolbar
               android:id="@+id/toolbar"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/white">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:text="Math Quiz"
                       android:gravity="center"
                       android:textSize="@dimen/_12sdp"
                       android:id="@+id/title"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:src="@drawable/appname"
                       android:textColor="@color/blackish"
                       android:fontFamily="@font/semibold"/>
               </LinearLayout>
           </androidx.appcompat.widget.Toolbar>
           <LinearLayout
               android:layout_marginHorizontal="@dimen/_15sdp"
               android:layout_marginTop="@dimen/_15sdp"
               android:background="@drawable/que"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_weight="1"
                   android:paddingTop="@dimen/_15sdp"
                   android:paddingLeft="@dimen/_15sdp"
                   android:layout_width="match_parent"
                   android:orientation="vertical"
                   android:layout_height="@dimen/_100sdp">

                   <TextView
                       android:text="Quiz Questions Left:"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/_15sdp"
                       android:fontFamily="@font/semibold"
                       android:textColor="@color/blackish"/>
                   <TextView
                       android:text="Play Quiz and test your math skills"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/_12sdp"
                       android:fontFamily="@font/semibold"
                       android:textColor="@color/blackish"/>
                   <TextView
                       android:textColor="@color/white"
                       android:fontFamily="@font/semibold"
                       android:text="hello"
                       android:gravity="center"
                       android:visibility="gone"
                       android:id="@+id/quecredit"
                       android:layout_width="match_parent"
                       android:layout_marginHorizontal="@dimen/_30sdp"
                       android:layout_height="@dimen/_30sdp"
                       android:background="@drawable/creditdialog"/>
                   <TextView
                       android:textColor="@color/white"
                       android:fontFamily="@font/semibold"
                       android:text="hello"
                       android:gravity="center"
                       android:visibility="gone"
                       android:id="@+id/timer"
                       android:layout_width="match_parent"
                       android:layout_marginHorizontal="@dimen/_30sdp"
                       android:layout_height="@dimen/_30sdp"
                       android:background="@drawable/creditdialog"/>
               </LinearLayout>
               <TextView
                   android:id="@+id/count"
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:text="8"
                   android:layout_width="@dimen/_50sdp"
                   android:layout_height="@dimen/_50sdp"
                   android:textSize="@dimen/_15sdp"
                   android:fontFamily="@font/semibold"
                   android:textColor="@color/blackish"/>
           </LinearLayout>
           <Space
               android:layout_width="match_parent"
               android:layout_height="@dimen/_20sdp"/>
           <LinearLayout
               android:layout_marginHorizontal="@dimen/_15sdp"
               android:background="@drawable/que"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_150sdp"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/ques"
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:text="8"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:textSize="@dimen/_15sdp"
                   android:fontFamily="@font/semibold"
                   android:textColor="@color/blackish"/>
           </LinearLayout>
           <Space
               android:layout_width="match_parent"
               android:layout_height="@dimen/_20sdp"/>
           <TextView
               android:gravity="center"
               android:layout_gravity="center"
               android:text="Write Your answer"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_30sdp"
               android:textSize="@dimen/_15sdp"
               android:fontFamily="@font/semibold"
               android:textColor="@color/blackish"/>
           <Space
               android:layout_width="match_parent"
               android:layout_height="@dimen/_20sdp"/>
           <EditText
               android:inputType="number"
               android:id="@+id/ans"
               android:layout_marginHorizontal="@dimen/_25sdp"
               android:background="@drawable/que"
               android:gravity="center"
               android:layout_gravity="center"
               android:hint="Right answer"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_35sdp"
               android:textSize="@dimen/_15sdp"
               android:fontFamily="@font/semibold"
               android:textColor="@color/blackish"/>
           <Space
               android:layout_width="match_parent"
               android:layout_height="@dimen/_20sdp"/>
           <Button
               android:background="@drawable/queans"
               android:id="@+id/submit"
               app:backgroundTint="@null"
               android:fontFamily="@font/semibold"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_45sdp"
               android:text="Submit Answer"
               android:layout_marginHorizontal="@dimen/_25sdp"
               />
       </LinearLayout>
   </ScrollView>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>