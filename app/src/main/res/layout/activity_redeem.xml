<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Activities.RedeemActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="Rewards"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/appname"
                android:textColor="@color/blackish"
                android:fontFamily="@font/semibold"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:fontFamily="@font/semibold"
                    android:textSize="@dimen/_15sdp"
                    android:id="@+id/coins"
                    android:textColor="@color/blackish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available Coins" />
                <TextView
                    android:layout_toRightOf="@id/coins"
                    android:layout_toLeftOf="@id/frame"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content" />
                <RelativeLayout
                    android:layout_alignParentEnd="true"
                    android:id="@+id/frame"
                    android:layout_margin="@dimen/_15sdp"
                    android:background="@drawable/rect"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_30sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/coin"
                            />
                        <TextView
                            android:layout_marginLeft="0dp"
                            android:paddingLeft="0dp"
                            android:id="@+id/coin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="120000"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"/>
                    </LinearLayout>


                </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginLeft="@dimen/_18sdp"
                android:fontFamily="@font/semibold"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/blackish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Redeem coin with Paytm" />

            <RelativeLayout
                android:layout_margin="@dimen/_15sdp"
                android:background="@drawable/paytmbox"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="@dimen/_70sdp">
                <ImageView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/paytm"/>
                <LinearLayout
                    android:padding="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_alignParentEnd="true"
                        android:id="@+id/frame1"
                        android:layout_margin="@dimen/_3sdp"
                        android:background="@drawable/rect"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_25sdp">
                        <LinearLayout
                            android:id="@+id/paytm1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/coin"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                android:text="1600"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10sdp"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semibold"
                        android:textSize="@dimen/_12sdp"
                        android:drawableLeft="@drawable/rssize"
                        android:text="15"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:background="@drawable/paytmbox"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="@dimen/_70sdp">
                <ImageView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/paytm"/>
                <LinearLayout
                    android:padding="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_alignParentEnd="true"
                        android:id="@+id/frame2"
                        android:layout_margin="@dimen/_3sdp"
                        android:background="@drawable/rect"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_25sdp">
                        <LinearLayout
                            android:id="@+id/paytm2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/coin"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                android:text="4800"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10sdp"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semibold"
                        android:textSize="@dimen/_12sdp"
                        android:drawableLeft="@drawable/rssize"
                        android:text="50"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="@dimen/_15sdp"
                android:background="@drawable/paytmbox"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="@dimen/_70sdp">
                <ImageView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/paytm"/>
                <LinearLayout
                    android:padding="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_alignParentEnd="true"
                        android:id="@+id/frame3"
                        android:layout_margin="@dimen/_3sdp"
                        android:background="@drawable/rect"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_25sdp">
                        <LinearLayout
                            android:id="@+id/paytm3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/coin"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                android:text="9500"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10sdp"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semibold"
                        android:textSize="@dimen/_12sdp"
                        android:drawableLeft="@drawable/rssize"
                        android:text="100"/>
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginLeft="@dimen/_18sdp"
                android:fontFamily="@font/semibold"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/blackish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Redeem coin with Google Gift Card" />
            <RelativeLayout
                android:layout_margin="@dimen/_15sdp"
                android:background="@drawable/googleplaybox"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="@dimen/_70sdp">
                <ImageView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/googleplay"/>
                <LinearLayout
                    android:padding="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_alignParentEnd="true"
                        android:id="@+id/frame4"
                        android:layout_margin="@dimen/_3sdp"
                        android:background="@drawable/rect"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_25sdp">
                        <LinearLayout
                            android:id="@+id/gp1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/coin"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                android:text="1100"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10sdp"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semibold"
                        android:textSize="@dimen/_12sdp"
                        android:drawableLeft="@drawable/rssize"
                        android:text="10"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:background="@drawable/googleplaybox"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="@dimen/_70sdp">
                <ImageView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/googleplay"/>
                <LinearLayout
                    android:padding="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_alignParentEnd="true"
                        android:id="@+id/frame5"
                        android:layout_margin="@dimen/_3sdp"
                        android:background="@drawable/rect"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_25sdp">
                        <LinearLayout
                            android:id="@+id/gp2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/coin"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                android:text="2500"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10sdp"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semibold"
                        android:textSize="@dimen/_12sdp"
                        android:drawableLeft="@drawable/rssize"
                        android:text="25"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="@dimen/_15sdp"
                android:background="@drawable/googleplaybox"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="@dimen/_70sdp">
                <ImageView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/googleplay"/>
                <LinearLayout
                    android:padding="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_alignParentEnd="true"
                        android:id="@+id/frame6"
                        android:layout_margin="@dimen/_3sdp"
                        android:background="@drawable/rect"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_25sdp">
                        <LinearLayout
                            android:id="@+id/gp3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/coin"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                android:text="4800"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10sdp"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semibold"
                        android:textSize="@dimen/_12sdp"
                        android:drawableLeft="@drawable/rssize"
                        android:text="50"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>